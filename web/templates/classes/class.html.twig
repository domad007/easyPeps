{% extends 'base.html.twig' %}

{% block title %} -{{nomClasse.nomClasse}} {% endblock %}

{% block header %}
    <header class="jumbotron my-4">
        <h1 class="display-3" style="text-align: center">{{ nomClasse.nomClasse|upper }}</h1>
        <h3 class="display-7" style="text-align: center">{{ nomEcole.nomEcole }}</h3>
    </header>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/CSS/scripts/editable.css">
{% endblock %}

{% block scripts %}
    <script src="/JS/scripts/editable.js"></script>
    <script src="/JS/main.js"></script>
{% endblock %}

{% block container %}
    <div class="classe">
        <div class="jumbotron" style="font-size: 1.3em;">
            <div class="gestion" style="text-align: center">
                <h3 class="display-8">Gestion de classe: </h3>
                <a href="#" class="btn btn-primary btn-lg" style="text-align: center">Nouveau cours</a>
                <a href="#" class="btn btn-primary btn-lg" style="text-align: center">Nouvelle évaluation</a>
                <a href="#" class="btn btn-primary btn-lg" style="text-align: center">Plannification de cycle</a>
            </div>
            <br>
            <div style="text-align: center">
                <h3 class="display-3">Liste des élèves</h3>
            </div>
            <br>
            <div class="table">
                <table class="table" id="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Date de naissance</th>
                            <th>Age</th>
                        </tr>
                    </thead>
                    <tbody>
                            {% for key, value in eleves %}
                            {% set dateNaissance = date(value.dateNaissance.date) %}
                            <tr id="{{value.id}}">
                                <td>{{ loop.index0 }}</td>
                                <td><span title="Modifiez le nom de l'élève"><a data-pk="{{value.id}}" data-url="{{path('modif_eleve')}}" data-name="nom">{{value.nom}}</a></span></td>
                                <td><span title="Modifiez le prénom de l'élève"><a data-pk="{{value.id}}" data-url="{{path('modif_eleve')}}" data-name="prenom">{{value.prenom}}</a></span></td>
                                <td>{{dateNaissance | date('d-m-Y')}}</td>
                                <td>{{ dateNaissance | age }}</td>
                                <td><button id="deleteEleve" class="btn btn-primary" onclick="deleteEleve({{value.id}}, this);">Supprimer élève</button></td>
                            </tr>    
                            {% endfor %}
                    </tbody>
                </table>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}                 
                    {{form_start(form)}}
                        <div class="form-row" id="form"> 
                            <div class="form-group col-md-3">{{form_widget(form.nom)}}</div>
                            <div class="form-group col-md-3">{{form_widget(form.prenom)}}</div>
                            <div class="form-group col-md-5">{{form_widget(form.dateNaissance)}}</div>
                        </div>
                        
                        <div class="row d-flex justify-content-center">
                            {{form_widget(form.save)}}
                        </div>
                    {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}