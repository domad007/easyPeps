{% extends 'base.html.twig' %}

{% block title %} -Creation de la pondération {% endblock %}

{% block header %}
    <header class="jumbotron my-4">
        <h1 class="display-5" style="text-align: center">Pondération des évaluations cértificatives et travail journalier</h1>
    </header>
{% endblock %}
{% block container %}
    <div class="jumbotron">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    {{form_label(form.evaluation, "Evaluation certificative")}}
                    {{form_widget(form.evaluation)}}
                </div>
                <div class="col">
                    {{form_label(form.evaluation, "Travail journalier")}}
                    {{form_widget(form.cours)}}
                </div>
            </div>
            <br>
            <div class="row d-flex justify-content-center">  
                {{form_widget(form.save)}}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}