{% extends 'base.html.twig' %}

{% block title %} -Creation des appréciations {% endblock %}
{% form_theme form _self %}

{% block scripts %}
    <script src="/JS/main.js"></script>
{% endblock %}

{% block header %}
    <header class="jumbotron my-4">
        <h1 class="display-3" style="text-align: center">Appréciations</h1>
    </header>
{% endblock %}

{% block container %}
    <div class="jumbotron">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <div class="text-center">
            {{ form_start(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block _new_appreciation_ecole_appreciations_widget %}
    <div class="jumbotron" style="font-size: 1.3em;">  
    <br>  
    <div class="row d-flex justify-content-center">      
        {{form_widget(form)}}
    </div>  
    <div class="form-group text-center">
        <button type="button" id="addAppreciation" class="btn btn-success"><b>+</b></button>
    </div>
</div>    
{% endblock %}

{% block _new_appreciation_ecole_appreciations_entry_widget %}
    <div class="form-row" id="block_{{id}}">
        <div class="form-group col">
            {{form_label(form.intitule, "Appréciation")}} 
            {{form_widget(form.intitule)}}
        </div>
        <div class="form-group col">
            {{form_label(form.cote, "A partir de")}} 
            {{form_widget(form.cote)}}
        </div>
        <div class="form-group col-sm-1 mt-5">
            /10
        </div>    
        <div class="form-group col-sm-1  mt-4">
            <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
        </div>
    </div>
{% endblock %}