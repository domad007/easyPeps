{% extends 'base.html.twig' %}

{% block title %} - Mot de passe oublié {% endblock %}

{% block header %}
    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h1 class="display-3" style="text-align: center">Récuperez votre mot de passe !</h1>
    </header>
{% endblock %}

{% block container %}
    <div class="mdpOublie">
        <div class="jumbotron" style="font-size: 1.3em;">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}  
            <form method="post">
                <div class="form-group">
                    <input type="mail" name="mail" id="inputMail" class="form-control" placeholder="Votre email" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Envoyer le mail de réitinialisation de votre mot de passe!</button>
                </div>
            </form>
        </div>
    </div>    
{% endblock %}