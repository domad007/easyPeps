{% extends 'base.html.twig' %}
{% block title %} -Modification de votre mot de passe {% endblock %}
{% block header %}
    <header class="jumbotron my-4">
        <h1 class="display-3" style="text-align: center">Modification de votre mot de passe</h1>
    </header>
{% endblock %}
{% block container %}
    <div class="modifMdp">
        <div class="jumbotron" style="font-size: 1.3em;">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}  
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}  
             {{ form_start(form) }}
                <div class="form-group">
                </div>       
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}