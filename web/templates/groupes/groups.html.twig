{% extends 'base.html.twig' %}

{% block title %} -Mes Groupes {% endblock %} 
{% block header %}
    <header class="jumbotron my-4">
        <h1 class="display-3" style="text-align: center">Mes groupes</h1>
    </header>
{% endblock %}
{% block container %}
<div class="mesGroupes">
    <div class="jumbotron" style="font-size: 1.3em;">
        <div class="text-center">
            <h3 class="display-3">Vos groupes</h3>
        </div>  
        <div class="row d-flex justify-content-center">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}  
        </div>    
        <div class="row d-flex justify-content-center">
            <h4 class="display-10">Choisissez l'Ã©cole dans laquelle vous souhaitez grouper les classes: </h1>
            <div class="col-8">
                <select name="ecole" id="ecole" class="custom-select my-1 mr-sm-2" onchange="location = this.value">
                    <option value=""></option>
                    {% for key, value in ecoles %}
                        <option value="{{path('new_group', {idEcole: value.id})}}">{{value.nomEcole}}</option>
                    {% endfor %}
                </select>
            </div>
        </div> 
        <div style="text-align: center">
            <table class="table">   
                {% for key, value in groups %}
                    <tr>                
                        <td>Groupe {{loop.index}}</td>          
                        <td>
                            <a href="{{path("group", {idGroup: value.groups.id})}}">{{ value.nomClasse|upper }} ({{value.ecole.nomEcole}})</a> 
                        <td>                                     
                    </tr>
                {% endfor %}
            <table>     
        </div>
    </div>
</div>

{% endblock %}