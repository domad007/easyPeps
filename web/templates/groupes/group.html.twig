{% extends 'base.html.twig' %}

{% block title %} -Groupe {% endblock %} 
{% block header %}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/CSS/scripts/editable.css">
{% endblock %}

{% block scripts %}
    <script src="/JS/scripts/editable.js"></script>
    <script src="/JS/main.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#table').DataTable({
                "language": {
                    "sEmptyTable":     "Aucun élève est disponible veillez en ajouter dans l'onglet vos classes",
                    "sInfo":           "Affichage de _TOTAL_ élèves",
                    "sInfoEmpty":      "Affichage de l'élément 0 à 0 sur 0 élément",
                    "sInfoFiltered":   "(filtré à partir de _MAX_ éléments au total)",
                    "sInfoPostFix":    "",
                    "sInfoThousands":  ",",
                    "sLengthMenu":     "Afficher _MENU_ éléments",
                    "sLoadingRecords": "Chargement...",
                    "sProcessing":     "Traitement...",
                    "sSearch":         "Rechercher un élève :",
                    "sZeroRecords":    "Aucun élément correspondant trouvé",
                    "oPaginate": {
                        "sFirst":    "Premier",
                        "sLast":     "Dernier",
                        "sNext":     "Suivant",
                        "sPrevious": "Précédent"
                    },
                    "oAria": {
                        "sSortAscending":  ": activer pour trier la colonne par ordre croissant",
                        "sSortDescending": ": activer pour trier la colonne par ordre décroissant"
                    },
                    "select": {
                            "rows": {
                                "_": "%d lignes sélectionnées",
                                "0": "Aucune ligne sélectionnée",
                                "1": "1 ligne sélectionnée"
                            } 
                    }
                }
            });

            $('table p').editable({
                validate: function(value) {
                        if($.trim(value) == '') {
                            return 'Le champ ne peut pas être vide';
                        }
                },
                error: function(response, newValue) {
                    if(response.status != 200) {
                        return "Veuillez respecter l'annotation de base";
                    } else {
                        return response.responseText;
                    }
                }
            });

        });
    </script>
{% endblock %}
{% block container %}
<div class="classe">
    <div class="jumbotron" style="font-size: 1.3em;">
        <div class="gestion" style="text-align: center">
            <h3 class="display-7" style="text-align: center">{{ ecole.0.ecole.nomEcole}}</h3>
        </div>
        <br>
        <div class="table-responsive">
            <table class="table" id="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Date de naissance</th>
                        <th>Age</th>
                        <th>Classe</th>
                        <th>Supprimer l'élève</th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, value in group %}
                        {% set dateNaissance = date(value.dateNaissance.date) %}
                        <tr id="deleteRow_{{value.id}}">
                            <td>{{loop.index}}</td>
                            <td><span title="Modifiez le nom de l'élève"><p data-pk="{{value.id}}" data-url="{{path('modif_eleve')}}" data-name="nom">{{value.nom}}</p></span></td>
                            <td><span title="Modifiez le prénom de l'élève"><p data-pk="{{value.id}}" data-url="{{path('modif_eleve')}}" data-name="prenom">{{value.prenom}}</p></span></td>
                            <td>{{dateNaissance | date('d-m-Y')}}</td>
                            <td>{{ dateNaissance | age }}</td>
                            <td>{{value.classe.nomClasse}}</td>
                            <td style="text-align: center"><button id="deleteEleve" class="btn btn-danger btn-sm" onclick="deleteEleve({{value.id}}, this);"><i class="fas fa-trash"></i></button></td>
                        </tr>
                    {% endfor %}                  
                </tbody>
            </table>                                       
        </div>           
    </div>
</div>            
{% endblock %}