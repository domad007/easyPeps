{% extends 'base.html.twig' %}
{% block title %} -Prise des présences {% endblock %}
{% block header %}

{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/CSS/scripts/editable.css">
{% endblock %}

{% block scripts %}
    <script src="/JS/scripts/editable.js"></script>
    <script>
        $(document).ready(function(){
            $('td span').editable();
        });
    </script>
{% endblock %}    
{% block container %}
    <div class="jumbotron" style="font-size: 1.3em;">
        <h3 class="display-3" style="text-align: center">Prise des présences</h3>
        <br>
        <div class="row d-flex justify-content-center">
            <div class="table-responsive" style="text-align: center">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Abreviation</th>
                            <th>Description</th>
                        </tr>    
                    </thead>
                    <tbody>
                        {% if presencesCustomized is empty %}
                            {% for key, value in presences %}
                                <tr>
                                    <td><span data-pk="{{value.id}}" data-url="{{path('presences_customizedd')}}" data-name="presences_customized">{{value.abreviation}}</span></td>
                                    <td>{{value.libelle}}</td>
                                </tr>
                            {% endfor %}
                        {% else %}   
                            {% for key, value in presencesCustomized %}
                                <tr>
                                    <td><span data-pk="{{value.id}}" data-url="{{path('presences_customizedd')}}" data-name="presences_customized">{{value.abreviationCustomized}}</span></td>
                                    <td>{{value.typePresence.libelle}}</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}            